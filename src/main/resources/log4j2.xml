<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <Appenders>
    <Console name="console" target="SYSTEM_OUT">
      <PatternLayout
          pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%.15t] %c{5} - %msg%n" />
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="akka" level="info" />
    <Logger name="nl.ypmania.sparkmqtt.UdpServer" level="debug" />
    <Root level="debug" additivity="false">
      <AppenderRef ref="console" />
    </Root>
  </Loggers>
</Configuration>
